<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado cuando el botón está presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF5722" /> <!-- Cambia este color si quieres otro color de fondo cuando el botón esté presionado -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Estado predeterminado del botón -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF7043" /> <!-- Cambia este color si quieres otro color de fondo predeterminado -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
