<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo del Spinner -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Color del fondo -->
            <stroke android:width="1dp" android:color="#808080" /> <!-- Borde gris -->
            <corners android:radius="4dp" /> <!-- Esquinas redondeadas -->
        </shape>
    </item>
    <!-- Flecha indicadora -->
    <item android:right="8dp" android:top="12dp">
        <rotate android:fromDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="#808080" /> <!-- Color del triÃ¡ngulo -->
            </shape>
        </rotate>
    </item>
</layer-list>
